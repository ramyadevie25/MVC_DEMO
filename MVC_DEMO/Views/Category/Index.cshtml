@model List<Category>


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6">
           <a asp-controller="Category" asp-action="Create" class="btn btn-dark">
               <i class="bi bi-plus-circle"></i>Create New Category
           </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>CategoryName</th>
                <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Name</td>
                    <td>@x.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>
</div>